@using FinalProject.ViewModels.Admin;

@{
    ViewData["Title"] = "ChangeRoles";
}

@model UserRolesViewModel





<form method="post" class="w-100">
    <div class="content  w-100" style="height:100%">
        <input type="hidden" value="@Model.UserId" asp-for="UserId" />
        <div >
            <div >
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card" style="background-color:black;">
                            <table class="table" style="--bs-table-bg:black; vertical-align: middle; border-color:rgb(47, 51, 54)">
                                <thead>
                                    <tr>
                                        <th class="text-light">Photo</th>
                                        <th class="text-light">Username</th>
                                        <th class="text-light">Roles</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="">
                                            <div class="image">
                                                <a>
                                                    <img src="/assets/images/ProfileImages/@Model.ProfilePhoto"
                                                         alt="Profile Icon">
                                                </a>
                                            </div>
                                        </td>

                                        <td class="text-light">@Model.UserName</td>

                                        <td class="">

                                            @foreach (var role in Model.AllRoles)
                                            {

                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked" : "")>
                                                    <label class="form-check-label text-light" for="flexCheckDefault">
                                                        @role.Name
                                                    </label>
                                                </div>
                                            }

                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <button class="btn btn-primary" type="submit" style="margin-left: 38%;">
                Update Roles
            </button>
        </div>
    </div>
</form>